{
  "name": "portfolio",
  "version": "0.1.0",
  "description": "Modern portfolio website with GSAP animations, GitHub integration, AI terminal, and advanced customizations built with Next.js 15, TypeScript, and Tailwind CSS. Live at rudrasahoo.live",
  "author": "Rudra Sahoo <rudranarayanaknr@gmail.com>",
  "homepage": "https://rudrasahoo.live",
  "repository": {
    "type": "git",
    "url": "https://github.com/rudra-sah00/portfolio.git"
  },
  "keywords": [
    "portfolio",
    "nextjs",
    "typescript",
    "gsap",
    "animations",
    "github-api",
    "ai-terminal",
    "responsive",
    "modern",
    "vercel"
  ],
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:related": "jest --bail --findRelatedTests",
    "clean": "rm -rf .next",
    "analyze": "ANALYZE=true npm run build",
    "export": "next export",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test:ci",
    "quality": "npm run lint && npm run type-check && npm run test:coverage",
    "check-updates": "npx npm-check-updates",
    "update-deps": "npx npm-check-updates -u && npm install",
    "security": "npm audit --audit-level=moderate"
  },
  "dependencies": {
    "@tabler/icons-react": "^3.34.1",
    "@tsparticles/engine": "^3.9.1",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.9.1",
    "@types/nodemailer": "^7.0.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "github-markdown-css": "^5.8.1",
    "gsap": "^3.13.0",
    "highlight.js": "^11.11.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.541.0",
    "marked": "^16.2.0",
    "mermaid": "^11.10.1",
    "motion": "^12.23.12",
    "next": "15.5.0",
    "nodemailer": "^7.0.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "terminal.js": "^1.0.11"
  },
  "devDependencies": {
    "@codecov/vite-plugin": "^1.9.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.4",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jszip": "^3.4.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "zod": "^4.1.12"
  }
}
